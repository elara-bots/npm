{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [],
    "rules": {
        "no-empty-function": 0,
        "semi": ["error", "always"],
        "curly": ["error", "all"],
        "no-var-requires": 0,
        "object-shorthand": "error"
    },
    "ignorePatterns": [
        "**/*.json",
        "node_modules/*"
    ]
}
